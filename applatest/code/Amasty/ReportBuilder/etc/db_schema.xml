    <table name="amasty_report_builder_report" resource="default" engine="innodb" comment="Reports Data Table">
        <column xsi:type="int" name="report_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Report ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" default="" comment="Report Name"/>
        <column xsi:type="varchar" name="main_entity" nullable="false" length="80" comment="Main Entity"/>
        <column xsi:type="varchar" name="store_ids" nullable="false" length="80" comment="Store IDs"/>
