        <column xsi:type="varchar" name="chart_axis_y" nullable="true" length="120" comment="Chart Y Axis"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="report_id"/>
        </constraint>
    </table>

    <table name="amasty_report_builder_column" resource="default" engine="innodb" comment="Columns Data Table">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="ID"/>
        <column xsi:type="varchar" name="column_id" length="120" nullable="false" comment="Column ID"/>
        <column xsi:type="varchar" name="custom_title" length="255" nullable="true"
                default="" comment="Custom Title"/>
        <column xsi:type="int" name="report_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Report ID"/>
        <column xsi:type="smallint" name="is_date_filter" nullable="false" padding="2" unsigned="true"
                default="0" identity="false" comment="Use this column for date filter"/>
        <column xsi:type="varchar" name="aggregation_type" length="20" nullable="true" comment="Aggregation Type"/>
        <column xsi:type="smallint" name="order" nullable="false" padding="2" unsigned="true"
                default="0" identity="false" comment="Use this column for sort"/>
        <column xsi:type="varchar" name="filter" nullable="false" default="" comment="Filter value"/>
        <column xsi:type="smallint" name="visibility" padding="2" unsigned="true" nullable="false" identity="false"
                default="1" comment="Column Visibility"/>
        <column xsi:type="smallint" name="position" padding="3" unsigned="true" nullable="false" identity="false"
                default="0" comment="Column Position"/>
        <constraint xsi:type="unique" referenceId="AM_RB_CLMN_CLMN_ID_REP_ID">
            <column name="report_id"/>
            <column name="column_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="AM_RB_CLMN_REP_ID_REP_REP_ID"
                    table="amasty_report_builder_column" column="report_id"
                    referenceTable="amasty_report_builder_report"
                    referenceColumn="report_id" onDelete="CASCADE"/>
        <index referenceId="AMASTY_SCHEME_RELATION_SCHEME_ID" indexType="btree">
            <column name="id"/>
        </index>
    </table>

    <table name="amasty_report_builder_scheme_relation" resource="default" engine="innodb"
