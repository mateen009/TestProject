                        return newcolorArr[target.dataItem.index];
                    } else {
                        return chart.colors.getIndex(9);
                    }
                } else {
                    return chart.colors.getIndex(target.dataItem.index);
                }
            });

            // Cursor
            chart.cursor = new am4charts.XYCursor();

        }); // end am4core.ready()
