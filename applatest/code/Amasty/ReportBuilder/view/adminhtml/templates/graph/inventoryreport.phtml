    function getColorCode() {
        // alert('In Function');
        const queryString = window.location.search;
        const urlParams = new URLSearchParams(queryString);
        if (urlParams.has('color')) {
            const color = urlParams.get('color');
            return color;
        } else {
            return '';
        }
        //alert(color);
    }
