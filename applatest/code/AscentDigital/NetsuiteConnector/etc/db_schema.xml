<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="items_details" resource="default" engine="innodb" comment="Items Details">
		<column xsi:type="int" name="id" padding="50" unsigned="false" nullable="false" identity="true" comment="ID" />
		<column xsi:type="smallint" name="item_id" nullable="false" comment="Item Id" />
		<column xsi:type="smallint" name="item_internal_id" nullable="false" comment="Item Internal Id" />
		<column xsi:type="smallint" name="location_id" nullable="false" comment="Location Id" />
		<column xsi:type="varchar" name="location_name" nullable="false" comment="Location Name" />
		<column xsi:type="smallint" name="qty" nullable="false" comment="Quantity" />
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="id" />
		</constraint>
		<constraint xsi:type="unique" referenceId="ITEMS_DETAILS_ITEM_ID_ITEM_INTERNAL_ID_LOCATION_ID">
			<column name="item_id" />
			<column name="item_internal_id" />
			<column name="location_id" />
		</constraint>
	</table>
	<!-- table for cron job iteration -->
	<table name="ns_cron_iteration" resource="default" engine="innodb" comment="Netsuite Cron Iteration">
		<column xsi:type="int" name="id" padding="6" unsigned="false" nullable="false" identity="true" comment="ID" />
		<column xsi:type="smallint" name="index" nullable="false" comment="Index" />
		<column xsi:type="smallint" name="total_pages" nullable="false" comment="Total Pages" />
		<column xsi:type="varchar" name="title" nullable="false" comment="Title" />
		<column xsi:type="varchar" name="search_id" nullable="false" comment="Search Id" />
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="id" />
		</constraint>
		<!--
		<constraint xsi:type="unique" referenceId="ITEMS_DETAILS_ITEM_ID_ITEM_INTERNAL_ID_LOCATION_ID">
		<column name="item_id"/>
		<column name="item_internal_id"/>
		<column name="location_id"/>
		</constraint>
		-->
	</table>
	<!-- table for customer specific files upload -->
	<table name="customer_files" resource="default" engine="innodb" comment="Customer Files">
		<column xsi:type="smallint" name="id" padding="10" unsigned="false" nullable="false" identity="true" comment="ID" />
		<column xsi:type="smallint" name="customer_id" nullable="false" comment="Customer Id" />
		<column xsi:type="varchar" name="file_name" nullable="false" comment="File Name" />
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="id" />
		</constraint>
	</table>
</schema>
