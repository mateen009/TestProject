<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!--Sync the sales_order table and sales_order_grid-->
    <virtualType name="Magento\Sales\Model\ResourceModel\Order\Grid" type="Magento\Sales\Model\ResourceModel\Grid">
        <arguments>
            <argument name="columns" xsi:type="array">
                <item name="approval_1_id" xsi:type="string">sales_order.approval_1_id</item>
                <item name="approval_2_id" xsi:type="string">sales_order.approval_2_id</item>
                <item name="approval_1_status" xsi:type="string">sales_order.approval_1_status</item>
                <item name="approval_2_status" xsi:type="string">sales_order.approval_2_status</item>
                <item name="ns_internal_id" xsi:type="string">sales_order.ns_internal_id</item>
                <item name="ns_so_number" xsi:type="string">sales_order.ns_so_number</item>

            </argument>
        </arguments>
    </virtualType>
    <preference for="Magento\Sales\Controller\AbstractController\OrderViewAuthorization" type="AscentDigital\OrderApproval\Plugin\OrderViewAuthorization" />
</config>


    

