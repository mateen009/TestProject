<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Catalog::catalog">
                    <resource id="Magenest_RentalSystem::rental" title="Rental Management" sortOrder="20">
                        <resource id="Magenest_RentalSystem::products" title="List Products" sortOrder="10"/>
                        <resource id="Magenest_RentalSystem::orders" title="List Orders" sortOrder="20"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::marketing">
                    <resource id="Magento_CatalogRule::promo">
                        <resource id="Magento_RentalSystem::rental_rule" title="Rental Price Rule" translate="title"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Magenest_RentalSystem::config_rental" title="Rental Configuration"/>
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Reports::report">
                    <resource id="Magenest_RentalSystem::reportrental" title="Rental Reports" sortOrder="20">
                        <resource id="Magenest_RentalSystem::salesreport" title="Report Sales" sortOrder="10"/>
                        <resource id="Magenest_RentalSystem::productreport" title="Report Product" sortOrder="20"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
