            <label>Days of Week Labels</label>
            <config_path>rental_system/locale/daysOfWeek</config_path>
            <frontend_model>Magenest\RentalSystem\Block\Adminhtml\System\Config\DaysOfWeek</frontend_model>
            <!--<validate>letters-only</validate>-->
            <comment>
                <![CDATA[
                    Labels for days of week, <b style="color:red">from Sunday to Saturday</b><br>
                    Day labels should not exceed <b>4</b> characters <br>
                    Default labels: Su, Mo, Tu, We, Th, Fr, Sa
                ]]>
            </comment>
        </field>
