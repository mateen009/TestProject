<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="magenest_rental_rule" resource="default" engine="innodb" comment="Magenest RentalSystem Price Rules">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="varchar" name="name" nullable="true" length="255" comment="Name"/>
        <column xsi:type="text" name="description" nullable="true" comment="Description"/>
        <column xsi:type="date" name="from_date" comment="From"/>
        <column xsi:type="date" name="to_date" comment="To"/>
        <column xsi:type="int" name="sort_order" unsigned="true" nullable="false" identity="false" default="0" comment="Sort Order"/>
        <column xsi:type="smallint" name="is_active" unsigned="false" nullable="false" identity="false" default="0" comment="Is Active"/>
        <column xsi:type="smallint" name="repeat_type" unsigned="false" nullable="false" identity="false" comment="Repeat Type"/>
        <column xsi:type="int" name="repeat_period" unsigned="false" nullable="true" identity="false" comment="Repeat Period"/>
        <column xsi:type="varchar" name="simple_action" nullable="true" length="32" comment="Simple Action"/>
        <column xsi:type="decimal" name="discount_amount" scale="6" precision="20" unsigned="false" nullable="false" default="0" comment="Discount Amount"/>
        <column xsi:type="smallint" name="stop_rules_processing" unsigned="false" nullable="false" identity="false" default="1" comment="Stop Rules Processing"/>
        <column xsi:type="smallint" name="apply_all" unsigned="false" nullable="false" identity="false" default="0" comment="Apply to All Rental Products"/>
        <column xsi:type="mediumtext" name="conditions_serialized" nullable="false" comment="Conditions Serialized"/>
        <column xsi:type="mediumtext" name="actions_serialized" nullable="false" comment="Actions Serialized"/>
        <column xsi:type="mediumtext" name="category_ids" nullable="true" comment="Category IDs"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
    <table name="magenest_rental_rule_product" resource="default" engine="innodb" comment="Rental Rule Product">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="int" name="rule_id" unsigned="true" nullable="false" identity="false" comment="Rule ID"/>
        <column xsi:type="int" name="product_id" padding="10" unsigned="true" nullable="false" identity="false" comment="Product ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="MAGENEST_RENTAL_RULE_PRODUCT_RULE_ID_PRODUCT_ID">
            <column name="rule_id"/>
            <column name="product_id"/>
        </constraint>
        <constraint xsi:type="foreign"
                    referenceId="MAGENEST_RENTAL_RULE_PRD_RULE_ID_MAGENEST_RENTAL_RULE_ENTT_ID"
                    table="magenest_rental_rule_product"
                    column="rule_id"
                    referenceTable="magenest_rental_rule"
                    referenceColumn="entity_id"
                    onDelete="CASCADE"/>
        <constraint xsi:type="foreign"
                    referenceId="MAGENEST_RENTAL_RULE_PRD_PRD_ID_CAT_PRD_ENTT_ENTT_ID"
                    table="magenest_rental_rule_product"
                    column="product_id"
                    referenceTable="catalog_product_entity"
                    referenceColumn="entity_id"
                    onDelete="CASCADE"/>
    </table>
</schema>
