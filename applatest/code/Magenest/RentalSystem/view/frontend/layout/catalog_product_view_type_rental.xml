<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Magenest_RentalSystem::css/daterangepicker.css"/>
        <script src="Magenest_RentalSystem::js/custom.js"/>
    </head>
    <body>
        <referenceContainer name="product.info.main">
            <block class="Magenest\RentalSystem\Block\Product\QuantityRented"
                    name="product.info.options.rental.qtyrented"
                    as="rental_options_qtyrented"
                    before="product.info.price"
                    template="catalog/product/qtyrented.phtml"/>
        </referenceContainer>
        <referenceBlock name="product.info.options.wrapper">
            <block class="Magenest\RentalSystem\Block\Product\Rental"
                    name="product.info.options.rental"
                    as="rental_options"
                    before="-"
                    template="catalog/product/rental.phtml"/>
        </referenceBlock>
        <referenceBlock name="product.info.details">
            <block class="Magenest\RentalSystem\Block\Product\Tab\Policy"
                    template="Magenest_RentalSystem::catalog/product/tab/policy.phtml"
                    name="policy.tab"
                    group="detailed_info">
                <arguments>
                    <argument name="title" translate="true" xsi:type="string">Policy</argument>
                </arguments>
            </block>
        </referenceBlock>
        <!--EE 2.3 full width layout-->
        <referenceContainer name="product.info.details.after.wrapper.main">
            <block class="Magento\Framework\View\Element\Template"
                    name="product.rentalpolicy.wrapper"
                    after="product.attributes.wrapper"
                    before="product.reviews.wrapper"
                    template="Magento_PageBuilder::catalog/product/view/section_wrapper.phtml">
                <arguments>
                    <argument name="title" translate="true" xsi:type="string">Policy</argument>
                </arguments>
                <block class="Magenest\RentalSystem\Block\Product\Tab\Policy"
                        name="product.info.product_rental_policy.wrapper"
                        template="Magenest_RentalSystem::catalog/product/tab/policy.phtml">
                </block>
            </block>
        </referenceContainer>

    </body>
</page>
