<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
	<system>
		<section id="email_builder" translate="label" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
			<class>separator-top</class>
			<label>Email Builder</label>
			<tab>magezon</tab>
			<resource>Magezon_EmailBuilder::settings</resource>
			<group id="general" translate="label" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>General Settings</label>
				<field id="version" translate="label" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Current Version</label>
					<frontend_model>Magezon\EmailBuilder\Block\Adminhtml\Renderer\Config\Version</frontend_model>
				</field>
				<field id="enable" translate="label comment" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Enable Email Builder</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
			</group>
		</section>
	</system>
</config>