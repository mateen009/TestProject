<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\Email\Model\Template" type="Magezon\EmailBuilder\Model\Template" />
    <preference for="Magento\Email\Block\Adminhtml\Template\Preview" type="Magezon\EmailBuilder\Block\Adminhtml\Template\Preview" />

    <type name="Magezon\EmailBuilder\Model\Template">
        <plugin name="after_process_email_template" type="Magezon\EmailBuilder\Plugin\Model\Template" disabled="false" />
    </type>

    <type name="Magezon\Builder\Data\Groups">
        <arguments>
            <argument name="groups" xsi:type="array">
                <item name="email" xsi:type="array">
                    <item name="name" xsi:type="string" translate="true">Email Templates</item>
                    <item name="sortOrder" xsi:type="number">50</item>
                </item>
            </argument>
        </arguments>
    </type>

    <type name="Magezon\EmailBuilder\Model\CompositeConfigProvider">
        <arguments>
            <argument name="configProviders" xsi:type="array">
                <item name="default" xsi:type="object">Magezon\EmailBuilder\Model\DefaultConfigProvider</item>
            </argument>
        </arguments>
    </type>

    <type name="Magezon\SimpleBuilder\Data\Elements">
        <arguments>
            <argument name="elements" xsi:type="array">
                <!--Email builder elements-->
                <item name="email_logo" xsi:type="array">
                    <item name="name" xsi:type="string" translate="true">Email Logo</item>
                    <item name="class" xsi:type="string">Magezon\EmailBuilder\Data\Element\Logo</item>
                    <item name="block" xsi:type="string">Magezon\EmailBuilder\Block\Email\Element\Logo</item>
                    <item name="element" xsi:type="string">Magezon_EmailBuilder/js/builder/element/logo</item>
                    <item name="templateUrl" xsi:type="string">Magezon_EmailBuilder/js/templates/builder/element/logo.html</item>
                    <item name="template" xsi:type="string">Magezon_EmailBuilder::element/logo.phtml</item>
                    <item name="sortOrder" xsi:type="number">820</item>
                    <item name="icon" xsi:type="string">mgz-icon mgz-icon-product</item>
                    <item name="icon_styles" xsi:type="array">
                        <item name="background-color" xsi:type="string">#ff9900</item>
                    </item>
                    <item name="group" xsi:type="string">email</item>
                    <item name="area" xsi:type="string">email</item>
                </item>
                <item name="email_menu" xsi:type="array">
                    <item name="name" xsi:type="string" translate="true">Email Menu</item>
                    <item name="class" xsi:type="string">Magezon\EmailBuilder\Data\Element\Menu</item>
                    <item name="block" xsi:type="string">Magezon\EmailBuilder\Block\Email\Element\Menu</item>
                    <item name="element" xsi:type="string">Magezon_EmailBuilder/js/builder/element/menu</item>
                    <item name="templateUrl" xsi:type="string">Magezon_EmailBuilder/js/templates/builder/element/menu.html</item>
                    <item name="template" xsi:type="string">Magezon_EmailBuilder::element/menu.phtml</item>
                    <item name="sortOrder" xsi:type="number">830</item>
                    <item name="icon" xsi:type="string">mgz-icon mgz-icon-product</item>
                    <item name="icon_styles" xsi:type="array">
                        <item name="background-color" xsi:type="string">#ff9900</item>
                    </item>
                    <item name="group" xsi:type="string">email</item>
                    <item name="area" xsi:type="string">email</item>
                </item>
                <item name="social_button" xsi:type="array">
                    <item name="name" xsi:type="string" translate="true">Social Buttons</item>
                    <item name="class" xsi:type="string">Magezon\EmailBuilder\Data\Element\SocialButtons</item>
                    <item name="block" xsi:type="string">Magezon\EmailBuilder\Block\Email\Element\SocialButtons</item>
                    <item name="element" xsi:type="string">Magezon_EmailBuilder/js/builder/element/social_buttons</item>
                    <item name="templateUrl" xsi:type="string">Magezon_EmailBuilder/js/templates/builder/element/social_buttons.html</item>
                    <item name="template" xsi:type="string">Magezon_EmailBuilder::element/social_buttons.phtml</item>
                    <item name="sortOrder" xsi:type="number">840</item>
                    <item name="icon" xsi:type="string">mgz-icon mgz-icon-product</item>
                    <item name="icon_styles" xsi:type="array">
                        <item name="background-color" xsi:type="string">#ff9900</item>
                    </item>
                    <item name="group" xsi:type="string">email</item>
                    <item name="area" xsi:type="string">email</item>
                </item>
                <item name="footer_links" xsi:type="array">
                    <item name="name" xsi:type="string" translate="true">Footer Links</item>
                    <item name="class" xsi:type="string">Magezon\EmailBuilder\Data\Element\FooterLinks</item>
                    <item name="block" xsi:type="string">Magezon\EmailBuilder\Block\Email\Element\FooterLinks</item>
                    <item name="element" xsi:type="string">Magezon_EmailBuilder/js/builder/element/footerlinks</item>
                    <item name="templateUrl" xsi:type="string">Magezon_EmailBuilder/js/templates/builder/element/footerlinks.html</item>
                    <item name="template" xsi:type="string">Magezon_EmailBuilder::element/footerlinks.phtml</item>
                    <item name="sortOrder" xsi:type="number">850</item>
                    <item name="icon" xsi:type="string">mgz-icon mgz-icon-product</item>
                    <item name="icon_styles" xsi:type="array">
                        <item name="background-color" xsi:type="string">#ff9900</item>
                    </item>
                    <item name="group" xsi:type="string">email</item>
                    <item name="area" xsi:type="string">email</item>
                </item>
                <item name="email_footer" xsi:type="array">
                    <item name="name" xsi:type="string" translate="true">Copyright</item>
                    <item name="class" xsi:type="string">Magezon\EmailBuilder\Data\Element\Copyright</item>
                    <item name="block" xsi:type="string">Magezon\EmailBuilder\Block\Email\Element\Copyright</item>
                    <item name="template" xsi:type="string">Magezon_EmailBuilder::element/copyright.phtml</item>
                    <item name="element" xsi:type="string">Magezon_EmailBuilder/js/builder/element/copyright</item>
                    <item name="templateUrl" xsi:type="string">Magezon_EmailBuilder/js/templates/builder/element/copyright.html</item>
                    <item name="sortOrder" xsi:type="number">860</item>
                    <item name="icon" xsi:type="string">mgz-icon mgz-icon-product</item>
                    <item name="icon_styles" xsi:type="array">
                        <item name="background-color" xsi:type="string">#ff9900</item>
                    </item>
                    <item name="group" xsi:type="string">email</item>
                    <item name="area" xsi:type="string">email</item>
                </item>
                <item name="variables" xsi:type="array">
                    <item name="name" xsi:type="string" translate="true">Load Template</item>
                    <item name="class" xsi:type="string">Magezon\EmailBuilder\Data\Element\LoadTemplate</item>
                    <item name="block" xsi:type="string">Magezon\EmailBuilder\Block\Email\Element\LoadTemplate</item>
                    <item name="element" xsi:type="string">Magezon_EmailBuilder/js/builder/element/load_template</item>
                    <item name="templateUrl" xsi:type="string">Magezon_EmailBuilder/js/templates/builder/element/load_template.html</item>
                    <item name="template" xsi:type="string">Magezon_EmailBuilder::element/load_template.phtml</item>
                    <item name="sortOrder" xsi:type="number">870</item>
                    <item name="icon" xsi:type="string">mgz-icon mgz-icon-product</item>
                    <item name="icon_styles" xsi:type="array">
                        <item name="background-color" xsi:type="string">#ff9900</item>
                    </item>
                    <item name="group" xsi:type="string">email</item>
                    <item name="area" xsi:type="string">email</item>
                </item>
            </argument>
        </arguments>
    </type>
</config>