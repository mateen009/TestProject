/** @var $block \Magezon\EmailBuilder\Block\Email\Element\FooterLinks */

$heading = $block->getHeading();
$links = $block->getLinks();
$cols = 100/count($links);
?>
<div class="mgz-footer-links">
    <?php if ($links): ?>
        <?php foreach ($links as $link): ?>
            <div class="footer-links-detail" style="width: <?= $cols ?>%">
                <<?= $heading ?>><?= $block->escapeHtml($link['main_title']) ?></<?= $heading ?>>
                <ul>
                    <?php foreach ($link['footer_link'] as $item): ?>
                        <?php
                            $blank = $item['child_link']['blank'];
                            $nofollow = $item['child_link']['nofollow'];
                        ?>
                        <li>
                            <a <?php if ($nofollow == '1') : ?> rel="nofollow" <?php endif; ?> href="<?= $item['child_link']['url'] ?>" <?php if ($blank == '1') : ?> target="_blank" <?php endif; ?>>
                                <span><?= $item['child_link']['title'] ?></span>
                            </a>
                        </li>
                    <?php endforeach; ?>
                </ul>
            </div>
        <?php endforeach; ?>
    <?php endif; ?>
</div>
