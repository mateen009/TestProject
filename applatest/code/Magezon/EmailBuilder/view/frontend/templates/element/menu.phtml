/** @var $block \Magezon\EmailBuilder\Block\Email\Element\Menu */

$menus = $block->getMenus();
?>
<?php if (!empty($menus)): ?>
<div class="mgz-email-navbar">
    <?php foreach ($menus as $menu): ?>
        <?php
        $href = $menu['menu_link']['url'];
        $blank = $menu['menu_link']['blank'];
        $nofollow = $menu['menu_link']['nofollow'];
        ?>
        <a <?php if ($nofollow == 'true') : ?> rel="nofollow" <?php endif; ?> href="<?= $href ?>" class="menu-link" <?php if ($blank == 'true') : ?> target="_blank" <?php endif; ?>>
            <?= $block->escapeHtml($menu['menu_link']['title']) ?>
        </a>
    <?php endforeach; ?>
</div>
<?php endif; ?>
