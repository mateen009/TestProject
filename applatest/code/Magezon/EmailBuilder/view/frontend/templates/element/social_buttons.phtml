/** @var $block \Magezon\EmailBuilder\Block\Email\Element\SocialButtons */
$title = $block->getMainText();
$socials = $block->getSocials();
$type = $block->getElement()->getDisplayType();
$display = $block->getElement()->getTextDisplay();
?>
<?php if ($type == 'bootstrap'): ?>
    <div class="container mgz-social-buttons">
        <?php if ($display): ?><div class="mgz-social-text-follow"><?= $block->escapeHtml($title) ?></div><?php endif; ?>
        <div class="row">
            <?php if ($socials) : $cols = 12/count($socials); ?>
                <?php foreach ($socials as $item) : ?>
                    <?php
                        $href = $item['social_url']['url'];
                        $blank = $item['social_url']['blank'];
                        $nofollow = $item['social_url']['nofollow'];
                    ?>
                    <div class="col-lg-<?= $cols ?> col-md-<?= $cols ?> col-xs-12">
                        <a <?php if ($nofollow == 'true') : ?> rel="nofollow" <?php endif; ?> href="<?= $href ?>" <?php if ($blank == 'true') : ?> target="_blank" <?php endif; ?>>
                            <img src="<?= $block->getSocialImg($item['social_img'])?>" alt="<?= $item['social_url']['title'] ?>"/>
                        </a>
                    </div>
                <?php endforeach; ?>
            <?php endif; ?>
        </div>
    </div>
<?php else: ?>
    <div class="mgz-social-buttons">
        <?php if ($display): ?><div class="mgz-social-text-follow"><?= $block->escapeHtml($title) ?></div><?php endif; ?>
        <?php if ($socials) : ?>
            <ul><?php foreach ($socials as $item) : ?>
                <?php
                    $href = $item['social_url']['url'];
                    $blank = $item['social_url']['blank'];
                    $nofollow = $item['social_url']['nofollow'];
                ?>
                <li>
                    <a <?php if ($nofollow == 'true') : ?> rel="nofollow" <?php endif; ?> href="<?= $href ?>" <?php if ($blank == 'true') : ?> target="_blank" <?php endif; ?>>
                        <img src="<?= $block->getSocialImg($item['social_img'])?>" alt="<?= $item['social_url']['title'] ?>"/>
                    </a>
                </li>
            <?php endforeach; ?></ul>
        <?php endif; ?>
    </div>
<?php endif; ?>