<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="checkout.cart.methods">
            <block class="Magento\Checkout\Block\Onepage\Link" name="checkout.cart.methods.onepage.quoterequest" template="Mobility_QuoteRequest::onepage/quoterequest.phtml" before="-" />
        </referenceContainer>
        <referenceBlock name="checkout.cart.methods.onepage.bottom">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Mobility_QuoteRequest::onepage/link.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>