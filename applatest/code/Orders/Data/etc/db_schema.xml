<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order" resource="sales" engine="innodb" comment="Sales Order">
        <column xsi:type="date" name="due_date" nullable="true" comment="Due Date"/>
        <column xsi:type="varchar" name="order_type" nullable="true" length="55" comment="Order Type"/>
         <column xsi:type="varchar" name="order_by" nullable="true" length="55" comment="Order By"/>
    </table>
    <table name="sales_order_grid" resource="sales" engine="innodb" comment="Sales Order Grid">
         <column xsi:type="varchar" name="order_by" nullable="true" length="55" comment="Order By"/>
    </table>
</schema>