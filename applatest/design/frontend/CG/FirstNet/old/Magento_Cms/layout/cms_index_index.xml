<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="columns.top">
            <container name="homepage.banner" htmlTag="div" htmlClass="homepage-banner">
                <block class="Magento\Cms\Block\Block" name="homepage-banner">
                    <arguments>
                        <argument name="block_id" xsi:type="string">homepage-banner</argument>
                    </arguments>
                </block>
            </container>
		</referenceContainer>

         <referenceContainer name="content">
             <block class="Magento\Cms\Block\Block" name="homepage-explore-block">
                    <arguments>
                        <argument name="block_id" xsi:type="string">homepage-explore-block</argument>
                    </arguments>
            </block>

             <block class="Magento\Cms\Block\Block" name="homepage-faq-block">
                    <arguments>
                        <argument name="block_id" xsi:type="string">homepage-faq-block</argument>
                    </arguments>
            </block>
		</referenceContainer>
    </body>
</page>
